{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"files": {
		"ignore": ["node_modules", "dist", "coverage", "**/package.json"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"nursery": {
				"all": false
			},
			"style": {
				"all": true,
				"noParameterProperties": "off"
			}
		}
	}
}
